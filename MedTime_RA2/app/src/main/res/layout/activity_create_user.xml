<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateUser">

    <TextView
        android:id="@+id/txt_crair_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title_creUser_criar_perfil"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <EditText
        android:id="@+id/edTxt_cNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/creUser_txt_nome"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_crair_conta" />

    <EditText
        android:id="@+id/edTxt_cSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/creUser_txt_senha"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTxt_cNome"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/btn_salvar_usuario"
        android:layout_width="129dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:text="@string/creUser_button_salvarUser"
        app:layout_constraintEnd_toEndOf="@+id/edTxt_cSenha"
        app:layout_constraintStart_toStartOf="@+id/edTxt_cSenha"
        app:layout_constraintTop_toBottomOf="@+id/edTxt_cSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>